<h1>Задачи проекта <%= @project.name %></h1>
 <%= link_to 'Создать задачу', new_task_path(project_id: @project.id), class: "btn btn-default" %>
   <section>
    <table class="table">
      <thead>
        <tr>
          <th>id</th>
          <th>Название</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @project.tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= link_to task.title, task_path(task) %></td>
            <td>
              <%= link_to 'Изменить', edit_task_path(task), class: "btn btn-outline-primary btn-sm" %>

              <%= link_to 'Удалить', task, method: :delete, data: { confirm: 'вы уверены?' } , class: "btn btn-outline-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
       