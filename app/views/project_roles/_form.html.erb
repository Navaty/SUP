<%= form_with(model: @project_role, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :user %>
    <%= form.select( :user_id, @user_options, id: :project_role_user_id, class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= form.label :project %>
    <%= form.collection_select :project_id, @option_parent, :id, :name, id: :project_role_project_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :role %>
    <%= form.text_area :role, id: :project_role_role, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Сохранить', class: 'btn btn-primary'%>
    <%= link_to 'Назад', :back, class: 'btn btn-outline-secondary' %> 
  </div>
<% end %>