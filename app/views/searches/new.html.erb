<h1><%= @title %></h1>
<%=form_for @search do |form| %>

<div class="form-group">
    <%= form.label :Ключевое_слово %>
    <%= form.text_field :keywords, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :Проект %>
    <%= form.collection_select(:project_id, Project.order(:name), :id, :name, include_blank: true) %>
  </div>

  <div class="field">
    <%= form.label :Исполнитель %>
    <%= form.collection_select(:assignet_to, User.order(:email), :id, :email, include_blank: true) %>
  </div>

  <div class="form-group">
    <%= form.label :Статус %>
    <%= form.select :status, [['Закрыта', true], ['Открыта', false]], include_blank: true %>
  </div>
  <div class="form-group">
    <%= form.submit 'Найти', class: 'btn btn-primary' %>
</div>
<% end %>