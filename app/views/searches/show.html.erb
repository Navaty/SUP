<h1>Результаты</h1>
<% if @search.products.empty? %>
	<h4 class="text-danger"> Не найдено подходящих объектов </h4>
	<% else %>
  <h4 class="text-success"> Количество найденных задач: <%= @search.products.count %> </h4>
  <%= link_to "Скачать xls", search_path(@search, format: :xlsx), class: "btn btn-primary" %>
	<section>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Название</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @search.products.each do |s| %>
          <tr>
            <td><%= s.id %></td>
            <td><%= link_to s.title, task_path(s) %></td>
            <td>
              <%= link_to 'Изменить', edit_task_path(s), class: "btn btn-outline-primary btn-sm" %>

              <%= link_to 'Удалить', s, method: :delete, data: { confirm: 'вы уверены?' } , class: "btn btn-outline-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <% end %>

