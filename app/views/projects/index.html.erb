<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<article class="project">
  <% @projects.each do |project| %>
  <section class="project-head">
    <h2><%= link_to project.name, projects_path(project) %></h2>
    <small>
      <time> <%= project.created_at.to_date.strftime("%d %B, %Y") %> </time>

      <%= link_to 'Изменить', edit_project_path(project) %>

      <%= link_to 'Удалить', project, method: :delete, data: { confirm: 'Are you sure?' } %>
    </small>
  </section>

  <section class="project-descrip">
    <%= project.description %>
  </section>
  <% end %>

  </article>