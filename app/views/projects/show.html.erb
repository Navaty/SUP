<p id="notice"><%= notice %></p>

<article class="project">
    <section class="project-head">
    	<h2><%= @project.name %></h2>
      <time> <%= @project.created_at.to_date.strftime("%d %B, %Y") %> </time>
      <%= link_to 'Редактировать', edit_project_path(@project), class: "btn btn-default col-md-offset-8" %>

    </section>

<p>
  <strong>Описание:</strong>
  <pre>
    <%= @project.description %>
  </pre>
</p>

<p> <strong>Tasks: </strong>
    <% @project.tasks.each do |task| %>
       <p><%= link_to "#{task.title}", task_path(task) %> </p>
    <%end%>
  
</p>
 <%= link_to 'Создать задачу', new_task_path(project_id: @project.id), class: "btn btn-default" %>
<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary' %> 
</article>