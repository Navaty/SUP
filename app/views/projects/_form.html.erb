<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= t('common.errors') %> </h5>
      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :Название %>
    <%= form.text_field :name, id: :project_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :Описание %>
    <%= form.text_area :description, id: :project_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :Родитель %>
    <%= form.collection_select :parent_id, @option_parent, :id, :name, {include_blank: true}, id: :project_parent_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Сохранить', class: 'btn btn-primary'%>
    <%= link_to 'Назад', :back, class: 'btn btn-outline-secondary' %> 
  </div>
<% end %>
